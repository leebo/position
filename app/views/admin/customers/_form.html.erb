

<div class="panel panel-default">
  <div class="panel-heading font-bold">新建用户</div>
  <div class="panel-body">

    <%=form_for [:admin,@customer] do |f| %>

        <div class="form-group">
          <label class="col-lg-2 control-label">name</label>
          <div class="col-lg-10">
            <input type="text" name="customer[name]" class="form-control" placeholder="姓名">
          </div>

          <label class="col-lg-2 control-label">mdn</label>
          <div class="col-lg-10">
            <input type="text" name="customer[mdn]" class="form-control" placeholder="电话号码">
          </div>

          <label class="col-lg-2 control-label">emsi</label>
          <div class="col-lg-10">
            <input type="text" name="customer[emsi]" class="form-control" placeholder="卡号">
          </div>

          <label class="col-lg-2 control-label">imei</label>
          <div class="col-lg-10">
            <input type="text" name="customer[imei]" class="form-control" placeholder="设备号">
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-offset-2 col-lg-10">
            <button type="submit" class="btn btn-sm btn-info">确定</button>
          </div>
        </div>

    <% end %>
  </div>
</div>




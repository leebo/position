<script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=4cd5996f3340ae81a2aa63f1a644eb60"></script>
  <div class="panel panel-default">
    <div class="panel-heading font-bold">吐鲁番重点地区</div>
    <div class="panel-body">

      <%=form_tag save_config_location_admin_sys_path do %>

          <div class="form-group">
            <label class="col-lg-2 control-label">地点</label>
            <div class="col-lg-10">
              <input type="text" name="name" class="form-control" placeholder="地点">
            </div>

            <label class="col-lg-2 control-label">经度</label>
            <div class="col-lg-10">
              <input type="text" name="lat" class="form-control" placeholder="经度">
            </div>
            <label class="col-lg-2 control-label">纬度</label>
            <div class="col-lg-10">
              <input type="text" name="lng" class="form-control" placeholder="纬度">
            </div>
          <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
              <button type="submit" class="btn btn-sm btn-info">确定</button>
            </div>
          </div>

      <% end %>
    </div>
  </div>
<div id="mapall">aaa</div>

<script type="text/javascript">
    function checkSize() {
        var h = document.documentElement.clientHeight;
        document.getElementById('aside').style.height = h - 200 + "px";
        document.getElementById('mapall').style.height = h - 200 + "px";
    }
    checkSize();
    var map = new BMap.Map("mapall", {});                        // 创建Map实例
    map.centerAndZoom(new BMap.Point(89.626, 42.858), 13);     // 初始化地图,设置中心点坐标和地图级别
    function showInfo(e){
   		alert(e.point.lng + ", " + e.point.lat);
   	}
   	map.addEventListener("click", showInfo);

</script>



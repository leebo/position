<script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=4cd5996f3340ae81a2aa63f1a644eb60"></script>
  <div class="panel panel-default">
    <div class="panel-heading font-bold" content="true">吐鲁番重点地区</div>
    <div class="table-responsive">
      <table class="table table-striped b-t b-light">
        <thead>
        <tr>
          <th>名    称</th>
          <th>经    度</th>
          <th>纬    度</th>
        </tr>
        </thead>
        <tbody>

        <% @targets.each do |target| %>
            <tr>
              <td><%= target.name %></td>
              <td><%= target.point["lat"] %></td>
              <td><%= target.point["lng"] %></td>

            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
<div id="mapall">aaa</div>

<script type="text/javascript">
    function checkSize() {
        var h = document.documentElement.clientHeight;
        document.getElementById('aside').style.height = h - 200 + "px";
        document.getElementById('mapall').style.height = h - 200 + "px";
    }
    checkSize();
    var map = new BMap.Map("mapall", {});                        // 创建Map实例
    map.centerAndZoom(new BMap.Point(89.626, 42.858), 13);     // 初始化地图,设置中心点坐标和地图级别
    function showInfo(e){
   		alert(e.point.lng + ", " + e.point.lat);
   	}
   	map.addEventListener("click", showInfo);

</script>


